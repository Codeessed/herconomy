<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/fragment_jobs_imageItem_iv"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/first"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/fragment_jobs_title_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="kkkkknnkknknknknknhjkkkkkjhggffvnnmmmmmmmmmmmkn"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginHorizontal="10dp"
                app:layout_constraintTop_toTopOf="@id/fragment_jobs_imageItem_iv"
                app:layout_constraintStart_toEndOf="@id/fragment_jobs_imageItem_iv"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/fragment_jobs_recruiter_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="hjhhhhhhhhhhhhhhhhhhjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjj"
                android:maxLines="1"
                android:ellipsize="end"
                app:layout_constraintStart_toStartOf="@id/fragment_jobs_title_tv"
                app:layout_constraintEnd_toEndOf="@id/fragment_jobs_title_tv"
                app:layout_constraintTop_toBottomOf="@id/fragment_jobs_title_tv"/>
            <TextView
                android:id="@+id/fragment_jobs_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 days ago"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toBottomOf="@id/fragment_jobs_imageItem_iv"
                app:layout_constraintStart_toStartOf="@id/fragment_jobs_title_tv"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>